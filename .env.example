# Application Configuration
APP_NAME="FinanceGPT Live"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
HOST="0.0.0.0"
PORT=8001
RELOAD=true
WORKERS=4

# Security Settings
SECRET_KEY="your-super-secret-key"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI/LLM Configuration
OPENAI_API_KEY=""
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
DEFAULT_MODEL="gpt-4-turbo-preview"
MAX_TOKENS=4096
TEMPERATURE=0.7

# Financial Data APIs
ALPHA_VANTAGE_KEY=""
FINNHUB_KEY=""
NEWS_API_KEY=""
POLYGON_KEY="your-polygon-key-here"

# Database Configuration
DATABASE_URL="postgresql+asyncpg://financegpt:password@localhost:5432/financegpt"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL="redis://localhost:6379"
CACHE_TTL=3600

# Pathway Configuration
PATHWAY_LICENSE_KEY="your-pathway-license-key-here"
PATHWAY_THREADS=4
PATHWAY_PERSISTENCE_DIR="./pathway_data"

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_HEARTBEAT_INTERVAL=30

# Market Data Configuration
MARKET_DATA_UPDATE_INTERVAL=5
MAX_SYMBOLS_PER_REQUEST=100
HISTORICAL_DATA_DAYS=365

# Agent Configuration
AGENT_CONCURRENCY_LIMIT=10
AGENT_TIMEOUT_SECONDS=30
MAX_AGENT_RETRIES=3

# Analytics Configuration
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_PROCESSING_INTERVAL=60

# Rate Limiting
RATE_LIMIT_RPM=1000
RATE_LIMIT_BURST=100

# Frontend Configuration
FRONTEND_URL="http://localhost:3000"
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:8080"]

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Feature Flags
ENABLE_REAL_TIME_STREAMING=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_AI_AGENTS=true
ENABLE_PORTFOLIO_TRACKING=true
ENABLE_RISK_MONITORING=true
ENABLE_NEWS_SENTIMENT=true

# Performance Configuration
ASYNC_POOL_SIZE=100
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=60

# Data Storage
DATA_RETENTION_DAYS=30
BACKUP_INTERVAL_HOURS=6

# Development Settings (remove in production)
MOCK_DATA_ENABLED=true
DEMO_MODE=true
BYPASS_AUTH=false
